<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenShopping" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/normal_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="AccountMainListItemTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/account_listitem_textsize</item>
        <item name="android:layout_marginTop">@dimen/account_listitem_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/account_listitem_start_margin</item>
    </style>

    <style name="AccountMainListItemImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/account_listitem_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/account_listitem_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/account_listitem_end_margin</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">end</item>
    </style>
</resources>